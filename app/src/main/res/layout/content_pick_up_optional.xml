                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SPICIAL INSTRUCTION"
                        android:textColor="@color/app_theme_color" />

                </LinearLayout>


                <!--****SPICIAL TEXT****-->

                <LinearLayout
