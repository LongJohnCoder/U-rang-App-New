                            android:padding="7dp"
                            android:layout_width="match_parent"
                            android:textColorHint="#333333"
                            android:entries="@array/box_or_hung"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            />

                    </LinearLayout>



                </LinearLayout>




                <!--****STARCH TEXT****-->


                <LinearLayout
