<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/padded_back">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">


        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/round1"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    >


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Andrew Simonds"
                        android:textStyle="bold"
                        android:background="#00000000"
                        android:textSize="16dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="$ 10.00"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="16dp"
                        android:id="@+id/tvPrice"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="+"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:background="@drawable/circle"
                        android:layout_marginRight="33dp"
                        android:id="@+id/tvPlus"
                        android:layout_alignTop="@+id/tvMinus"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="33dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="0"
                        android:padding="10dp"
                        android:id="@+id/tvQuantity"
                        android:layout_alignBottom="@+id/tvPlus"
                        android:layout_toLeftOf="@+id/tvPlus"
                        android:layout_toStartOf="@+id/tvPlus" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="-"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:background="@drawable/circle"
                        android:id="@+id/tvMinus"
                        android:layout_alignTop="@+id/tvPrice"
                        android:layout_toLeftOf="@+id/tvQuantity"
                        android:layout_toStartOf="@+id/tvQuantity" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>












