<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/padded_back">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">


        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/round1"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >


                    <FrameLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Order ID : 20456"
                            android:id="@+id/tvOrderId"
                            android:textColor="@color/app_theme_color"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="PickUp Date: 10'th July"
                            android:id="@+id/tvPickupInfo"
                            android:textColor="@color/app_theme_color"
                            android:layout_gravity="right|top" />

                    </FrameLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:id="@+id/trackImage"
                        android:src="@drawable/order_tracker_1"
                        android:layout_marginRight="0dp"
                        android:layout_marginLeft="0dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Cancel"
                        android:textColor="#ffffff"
                        android:id="@+id/tvCancle"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:background="@color/app_theme_color"
                        android:visibility="invisible"
                        android:layout_margin="3dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_below="@+id/trackImage"
                        android:layout_centerHorizontal="true" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>









    </LinearLayout>




</RelativeLayout>












