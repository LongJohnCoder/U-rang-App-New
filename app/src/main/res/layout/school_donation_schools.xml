<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/padded_back"
            android:padding="0dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/ivSchoolImageDonation"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/notification_template_icon_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Total Money Gained: "
                android:id="@+id/textView23"
                android:layout_below="@+id/tvSchoolNameDonation"
                android:layout_toEndOf="@+id/ivSchoolImageDonation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Pending Money:"
                android:id="@+id/textView24"
                android:layout_alignBottom="@+id/ivSchoolImageDonation"
                android:layout_alignStart="@+id/textView23" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="$ 5"
                android:id="@+id/tvSchoolGainedMoney"
                android:layout_alignTop="@+id/textView23"
                android:layout_toEndOf="@+id/textView23"
                android:layout_marginStart="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="$ 10"
                android:id="@+id/tvSchoolPendingMoney"
                android:layout_alignTop="@+id/textView24"
                android:layout_alignStart="@+id/tvSchoolGainedMoney" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="school name"
                android:textColor="@color/app_theme_color_secondary"
                android:id="@+id/tvSchoolNameDonation"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ivSchoolImageDonation" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>